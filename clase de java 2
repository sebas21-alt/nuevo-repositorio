import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.print("escribe una palabra: ");
        String texto = teclado.nextLine();
        System.out.println("el texto es: " + texto);
    }
}
